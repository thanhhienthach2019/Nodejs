extends ../layouts/common

block content
    h1.mb-2 
        span.mr-2 Product
    .row
        if prod
            each product in prod
                .card.col-sm-3(style='width: 16rem;')
                    img.img-responsive(src=product.image, alt=product.name)
                    .card-body
                        h5.card-title=product.name
                        p.card-text=product.description
                        a.btn.btn-primary(href='#') Add to cart